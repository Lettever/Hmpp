program ::= wssl+
wssl ::= 
function_call ::= '@' python_id attr* body?
python_id = [_a-zA-Z][_0-9a-zA-Z]*
attr ::= '#' id | '.' wssl | '(' wssl ')'
body ::= '{' wssl? '}'
id ::= string | [^ \t\n\r"'@#.]+
string ::= ([^"\\]|.)*